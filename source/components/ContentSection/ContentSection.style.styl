@import "../../style/_variables.styl"

.content-section
  width: 100%
  margin-bottom: 40px
  background-color: #fff

.content-section__header
  margin-bottom: 50px

.content-section__title
  margin-top: 0
  margin-bottom: 40px
  font-size: font-size-title-base
  line-height: line-height-title-base
  text-align: center
  color: color-title-base
  text-transform: uppercase

.content-section__text
  width: 75%
  margin-left: auto;
  margin-right: auto
  line-height: (26 / 14)
  text-align: center

  p
    margin-top: 0

    &:last-child
      margin-bottom: 0
