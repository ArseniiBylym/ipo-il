@import "../../style/variables.styl"

.copyright__text
.copyright__link
  color: color-text-light
  font-weight: 600
  line-height: (16 / 14)

.copyright__link
  position: relative
  display: inline-block
  padding-left: 11px
  vertical-align: middle

  &::before
    content: "|"
    position: absolute
    top: 0
    left: 4px

  &:first-child::before
    display: none
