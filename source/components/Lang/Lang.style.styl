@import "../../style/variables.styl"

.lang-switch__text
.lang-switch__link
  color: color-text-light
  font-weight: 600
  line-height: (16 / 14)

.lang-switch__link
  position: relative
  display: inline-block
  padding-left: 11px
  vertical-align: middle
  text-transform: uppercase

  &::before
    content: "|"
    position: absolute
    top: 0
    left: 4px

  &:first-child::before
    display: none

.lang-switch__link--active
  color: green