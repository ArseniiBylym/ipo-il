@import "../../style/_variables.styl"
@import "../../style/_mixins.index.styl"

.social-links
  padding-left: 50px
  padding-right: 50px

.social-links__list
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: space-around

.social-links__item
  max-width: 200px

.social-Links__link
  display: flex
  flex-direction: row
  align-items: center
  padding-left: 10px
  padding-right: 10px
  text-decoration: none

.social-Links__icon-wrapper
  width: 30px
  height: 30px
  margin-right: 10px

  img
    width: 30px
    height: 30px

.social-Links__text
  font-weight: 500
  color: #333


