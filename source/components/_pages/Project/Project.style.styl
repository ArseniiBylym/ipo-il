@import "../../../style/_variables.styl"
@import "../../../style/_mixins.index.styl"

.project-page
  padding-left: 115px
  padding-right: 115px

.project-page__container
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: space-between

.project-page__project-video
  width: 595px
  height: 375px

.project-page__detail
  flex: 0 0 235px
  display: flex
  flex-direction: column
  align-items: center
  padding-top: 10px
  padding-left: 20px
  padding-right: 20px

.project-page__progress-bar
  margin-bottom: 30px

  .progress-bar-circle
    width: 120px
    height: 120px

.project-page__funds
  margin-bottom: 30px
  font-weight: 600
  font-size: 18px
  line-height: (34 / 18)
  color: blue

.project-page__finish-date
  margin-bottom: 30px
  font-size: 18px
  line-height: (23 / 18)
  color: #8b8b8b

.project-page__buttons-wrapper
  display: flex
  flex-direction: column
  width: 100%

.project-page__button
  flex: 0 0 100%
  margin-bottom: 25px
  padding: 10px

  &:last-child
    margin-bottom: 0

.project-page__section
  margin-bottom: 50px
  text-align: center

.project-page__subtitle
  margin-top: 0
  margin-bottom: 32px
  font-weight: 600
  font-size: 18px
  line-height: (34 / 18)
  text-transform: uppercase
  color: blue

