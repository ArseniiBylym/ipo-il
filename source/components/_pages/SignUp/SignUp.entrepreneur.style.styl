@import "../../../style/_variables.styl"
@import "../../../style/_mixins.index.styl"

.sign-up__content
  margin-bottom: 40px

.sign-up__title
  margin-bottom: 40px
  font-weight: 500
  text-align: center
  line-height: (16 / 14)
  color: blue

.sign-up__container
  container()
  justify-content: space-between

.sign-up__container--center
  justify-content: center
  align-items: center

.sign-up__column
  flex: 0 0 45%

.sign-up__title-download-link
  margin-right: 85px

.sign-up__download-link
  position: relative
  padding: 55px 15px 15px 15px
  width: 120px
  height: 100px
  border: 2px solid blue
  border-radius: 8px
  font-weight: 500
  font-size: 14px
  line-height: (16 / 14)
  text-decoration: none
  text-align: center
  color: #333

  &::before
    content: ""
    position: absolute
    top: 15px
    left: 50%
    transform: translateX(-50%)
    width: 25px
    height: 25px
    background-image: url(./images/download.svg)
    background-repeat: no-repeat
    background-position: 50% 0