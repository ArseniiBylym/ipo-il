@import "../../../style/_variables.styl"

.steps-page
  padding-left: 50px
  padding-right: 50px

.steps-page__content
  padding-top: 50px

.steps-page__header
  text-align: center
  padding-left: 90px
  padding-right: 90px

.steps-page__title
  margin-top: 0
  margin-bottom: 35px
  font-weight: 600
  font-size: 18px
  line-height: (21 / 18)
  color: blue

.steps-page__text
  margin-top: 0
  margin-bottom: 50px

.steps-page__form
  padding-left: 40px
  padding-right: 40px

.steps-page__field-wrapper
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: space-between

.steps-page__field-wrapper--center
  flex-direction: column
  justify-content: flex-start
  align-items: center

  .log-in__forgot
    margin-left: auto
    margin-right: 240px

  .steps-page__control-wrapper
    flex: 0 0 44px
    width: 47%

.steps-page__control-wrapper
  flex: 0 0 47%

.steps-page__button-wrapper
  display: flex
  flex-wrap: wrap
  flex-direction: row
  justify-content: space-between
  padding-top: 54px

.steps-page__button-wrapper--center
  justify-content: center

.steps-page__button
  width: 235px