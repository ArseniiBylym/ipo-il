@import "../../../style/_variables.styl"

.steps-page
  padding-left: 50px
  padding-right: 50px

.steps-page__content
  padding-top: 50px
  padding-left: 90px
  padding-right: 90px

.steps-page__header
  text-align: center

.steps-page__title
  margin-top: 0
  margin-bottom: 35px
  font-weight: 600
  font-size: 18px
  line-height: (21 / 18)
  color: blue

.steps-page__text
  margin-top: 0
  margin-bottom: 50px

.steps-page__button-wrapper
  display: flex
  flex-wrap: wrap
  flex-direction: row
  justify-content: space-between

.steps-page__button-wrapper--center
  justify-content: center

.steps-page__button
  width: 235px