.media-player__btn-play-big-box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 82px;
  height: 82px;
}

.media-player__btn-play-big {
  display: inline-block;
  width: 100%;
  height: 100%;
  background-color: transparent;
  border: none;
  outline: none;
}

.media-player__btn-play-big-icon-box {
  position: relative;
  width: inherit;
  height: inherit;

  img {
    display: block;
    width: inherit;
    height: inherit;
  }
}
