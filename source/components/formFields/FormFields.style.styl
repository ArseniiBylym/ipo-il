@import "../../style/_variables.styl"
@import "../../style/_mixins.index.styl"

.form-control
  position: relative
  padding-top: 25px

.form-control__field
  text-ellipsis()
  padding: 12px 19px
  width: 100%
  font-family: font-family-raleway
  font-size: font-size-base
  line-height: (26 / font-size-base)
  font-weight: 500
  text-align: left
  color: #333
  border: 2px solid #ededed
  border-radius: 8px
  outline: none

.form-control__label
  position: absolute
  left: 20px
  right: 0
  display: inline-block
  font-weight: 500
  color: #b8b8b8
  text-align: left
  vertical-align: middle
  top: 36px
  transition-property: opacity
  transition-duration: duration-base

.form-control__label--short
  top 4px

.form-control__label-hide
  opacity: 0

.form-control__label-show
  opacity: 1

