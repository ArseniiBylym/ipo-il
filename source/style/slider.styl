@import "./_variables.styl"
@import "./_mixins.index.styl"

.slick-dots
  display: flex !important
  flex-direction: row
  flex-wrap: wrap
  justify-content: center
  padding: 30px

  li
    margin-right: 20px

    &:last-child
      margin-right: 0

  button
    position: relative
    width: 30px
    height: 30px
    padding: 0
    font-size: 0
    background-color: transparent
    border: none
    outline: none
    cursor: pointer

    &::before
      content: ""
      center-element()
      width: 10px
      height: 10px
      border-radius: 50%
      background-color: gray


.slick-active button::before
  background-color: blue